#!/bin/bash

tmp=`mktemp`
eval -- vim \
    --cmd \"profile start ${tmp}\" \
    --cmd \"profile func *\" \
    $(awk '$0 ~ /--cmd/ || $0 ~ / -c / { sub("exec vim ", ""); sub("\\\\$", ""); \
                                         gsub("\"", "\\\""); print $0 }' $(which vit) | xargs) \
&& vim ${tmp} +/SORTED
