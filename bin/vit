#!/bin/bash

usage() {
    {
    [ $# -gt 0 ] && echo -e "${1}\n"
    echo "USAGE: `basename $0` <command> <arguments>"
    more << USAGE_INFO
        Commands:

        log (lg) - Opens vim with the git log of the current repo
        status (st) - Displays the status of the current repo
USAGE_INFO
    } >&2
}

if [ $# -le 0 ]; then
    usage
    exit 1
fi

cmd=$1
shift
case $cmd in
log|lg) exec vim -c "set nonumber norelativenumber" -c "call vit#PopGitLog('')" -c "only" ;;
status|st) echo "TODO" ;;
esac
