#!/bin/bash

[ "$1" == "-h" -o "$1" == "--help" ] && {
    echo "USAGE: `basename $0` [file]" >&2
    exit
}

[ "$1" == "--profile" ] && {
    shift
    tmp=`mktemp`
    vim --cmd "profile start ${tmp}" \
        --cmd "profile func *" \
        --cmd "let g:que__vcs_section_enabled = 0" \
        -c "call vit#PopGitFileLog('"$1"')" \
    && vim ${tmp} +/SORTED
} || {
    exec vim --cmd "let g:que__vcs_section_enabled = 0" \
             -c "call vit#PopGitFileLog('"$1"')"
}
